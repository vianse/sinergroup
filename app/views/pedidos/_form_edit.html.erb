<%= render "header" %>
<div class="row">
  <div class="col-md-1 sidebar-line"></div>
  <div class="col-md-10 sidebar-line">
    <h1>Detalles del Pedido</h1>
<%= form_for(@pedido) do |f| %>
  <% if @pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pedido.errors.count, "error") %> prohibited this pedido from being saved:</h2>

      <ul>
      <% @pedido.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @cars.blank? %>
  
  <% else %>
  <div class="actions">
    <%= f.submit "Solicitar Pedido", :class=> "btn btn-success" %>
  </div>
  <div class="field">
    <%= f.text_field :comentarios, :placeholder => "Escribe un comentario", :class=>"form-control" %>
  </div>
  <div class="field">
    <%= f.select :envioC, options_for_select([["Enviar a cliente", "Enviar a cliente"], ["Enviar a socio", "Enviar a socio"]]), prompt: "Selecciona un tipo de envío", :class => "form-control", :required => true %>
  </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :titulo %>
    <h3><%= @pedido.titulo %></h3>
  </div>
  <div class="field">
    <%= f.hidden_field :estatus, :value => "Enviado" %>
  </div>
  <div class="field">
    <%= f.hidden_field :userID, :value => current_user.id %>
  </div> 
<% end %>
</div>
<div class="col-md-1 sidebar-line"></div>
</div>
<div class="row">
  <div class="col-md-1 sidebar-line"></div>
  <div class="col-md-10 sidebar-line">
<%= form_tag :controller => 'cars', :action => 'crearcar', :method => 'post' do %>
  
  <div class="field">
    <%= hidden_field_tag :pedidoID, nil,:value => params[:id], :class=>"form-control" %>
  </div>
  <div class="field">
    <%= label_tag :cantidad %><br>
    <%= text_field_tag :cantidad, nil,:class=>"form-control", :required=>true %>
  </div>
  <div class="field">
    <%= select_tag :productoID, options_for_select(@productos), prompt: "Selecciona un producto", :class => "form-control tamano" %>
  </div>
  <div class="field">
    <%= hidden_field_tag :costo,nil,:value=> Product.where(:descripcion => params[:pedidoID]).pluck(:costo).first, :class=>"form-control" %>
  </div>
  <div class="field">
    <%= hidden_field_tag :userID, nil,:class=>"form-control",:value=> current_user.id %>
  </div>
  <div class="actions">
    <%= submit_tag "Agregar a carrito", :class => "btn btn-warning" %>
  </div>
  <% end %>
</div>
<div class="col-md-1 sidebar-line"></div>
</div>

<div class="row">
<div class="col-md-1 sidebar-line"></div>
<div class="col-md-10 sidebar-line">
  <div class="table-responsive">
  <h1>Mi carrito</h1>

<table class="table table-middle">
  <thead>
    <tr>
      <th>Número de Pedido</th>
      <th>Cantidad</th>
      <th>Producto</th>
      <th>Costo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.pedidoID %></td>
        <td><%= car.cantidad %></td>
        <td><%= car.productoID %></td>
        <td><%= car.costo %></td>
        <td><%= link_to 'Eliminar Producto', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<div class="col-md-1 sidebar-line"></div>
</div>


